<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height">

    <android.support.v4.view.ViewPager
        android:id="@+id/item_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        android:layout_alignParentBottom="true"
        android:background="#8000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_describer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:maxLines="2"
            android:textSize="@dimen/item_content_textSize"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x16">

            <TextView
                android:id="@+id/item_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#fff"
                android:textSize="@dimen/item_time_textSize"  />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="#fff"
                android:textSize="@dimen/item_time_textSize"  />
            <com.ryan.interviewtest.view.MyIndicator
                android:id="@+id/vpi"
                app:pointGap="@dimen/x6"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/x6"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>